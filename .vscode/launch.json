    "version": "0.2.0",
    "configurations": [
        {
            "name": "Console output",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/seasonality.py",
            "console": "integratedTerminal",
            "args": ["--view", "console"],
            "justMyCode": true
        },
        {
            "name": "PDF output",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/seasonality.py",
            "console": "integratedTerminal",
            "args": ["--view", "pdf", "--file", "myplots.pdf"],
            "justMyCode": true
        }
    ]
}